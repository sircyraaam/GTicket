# ==================================================
# üîê Block .ht* files (security)
# ==================================================
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# ==================================================
# üîÄ URL Rewrite Settings
# ==================================================
Options +FollowSymLinks -MultiViews
RewriteEngine On
RewriteBase /GTicket/

# ‚úÖ Trust HTTPS from proxy (e.g. GoDaddy, Cloudflare, Docker)
SetEnvIf X-Forwarded-Proto https HTTPS=on

# ‚úÖ Force HTTPS (avoid redirect loop)
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# ‚úÖ Remove .php from GET requests (non-POST only)
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=302,L,NE]

# ‚úÖ Internally route /page to /page.php if it exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# ==================================================
# üöß Custom 404 Page
# ==================================================
ErrorDocument 404 /GTicket/404error.php

# ==================================================
# ‚úÖ Secure HTTP Headers
# ==================================================
<IfModule mod_headers.c>
    Header always set Content-Security-Policy "default-src 'self'; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self'; object-src 'none'; frame-ancestors 'none';"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    Header always set X-Frame-Options "DENY"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Expect-CT "max-age=86400, enforce"
    Header always set Cross-Origin-Resource-Policy "same-site"
    Header always set Cross-Origin-Embedder-Policy "require-corp"
    Header always set Permissions-Policy "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
</IfModule>
